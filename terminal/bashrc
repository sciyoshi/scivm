alias l="ls -lh --color=auto --group-directories-first"
alias la="ls -lha --color=auto --group-directories-first"
alias ll="ls -lh --color=auto --group-directories-first"

alias rmpyc="find . -name \*.pyc -exec rm \{\} \;"

GREEN='\e[1;32m'
CYAN='\e[1;36m'
BLUE='\e[1;34m'
WHITE='\e[1;37m'
YELLOW='\e[1;33m'
RED='\e[1;31m'
RESET='\e[0m'

function git_branch {
  if ! git rev-parse --git-dir > /dev/null 2>&1; then
    return 0
  fi

  local branch=$(git branch 2>/dev/null| sed -n '/^\*/s/^\* //p')

  echo " ($branch)"
}

export PS1="\[$GREEN\]\u\[$RESET\]@\[$CYAN\]\h\[$RESET\] \[$BLUE\]\w\[$RESET\]\[$YELLOW\]\$(git_branch) \[$GREEN\]Î»\[$RESET\] "

export EDITOR=nano

export GPG_TTY=$(tty)

if [ -f "${HOME}/.gpg-agent-info" ]; then
  . "${HOME}/.gpg-agent-info"
  export GPG_AGENT_INFO
  export SSH_AUTH_SOCK
fi

if hash gpg-agent 2> /dev/null; then
  gpg-agent &> /dev/null
fi

if [ "$?" -ne "0" ]; then
  eval $(gpg-agent --daemon --enable-ssh-support \
    --write-env-file "${HOME}/.gpg-agent-info")
fi

alias sc="sudo supervisorctl"
alias pipup="pip install -e ."
alias ntpup="sudo ntpdate -u ntp.ubuntu.com"
#eval "$(hub alias -s)"

export WORKON_HOME="${HOME}/envs"

if [ -f /usr/local/bin/virtualenvwrapper.sh ]; then
  . /usr/local/bin/virtualenvwrapper.sh
fi
